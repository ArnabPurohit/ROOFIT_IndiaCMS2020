<tool name="cgal" version="4.2-pafccj">
  <info url="http://www.cgal.org/"/>
  <lib name="CGAL_Core"/>
  <lib name="CGAL"/>
  <client>
    <environment name="CGAL_BASE" default="/cvmfs/cms.cern.ch/slc7_amd64_gcc820/external/cgal/4.2-pafccj"/>
