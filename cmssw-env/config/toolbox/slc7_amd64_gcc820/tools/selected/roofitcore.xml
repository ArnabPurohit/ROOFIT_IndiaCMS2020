  <client>
    <environment name="ROOFIT_BASE" default="/cvmfs/cms.cern.ch/slc7_amd64_gcc820/lcg/root/6.14.09"/>
    <environment name="LIBDIR" default="$ROOFIT_BASE/lib"/>
    <environment name="INCLUDE" default="$ROOFIT_BASE/include"/>
